--GetGenv Toggles
_G.AutoReload = false
getgenv.AntiDrown = false
getgenv().Suicide = false
getgenv().AutoReload = false
getgenv().Switch = false
getgenv().InstantEquip = "Implemented Directly Into Button"
------------------------------------------------------------------------
--_G Suicide
function Suicide()
spawn(function()
while getgenv().Suicide == true do
game.Players.LocalPlayer.Character.Humanoid.RigType = Enum.HumanoidRigType.R15
end
end)
end

--_G Anti Drown
function AntiDrown()
spawn(function()
while getgenv().AntiDrown == true do
wait()
game:GetService("ReplicatedStorage").Events.TK_DGM.Name = "TK_DGM0"
end
end)
end

--_G Can Switch
function InstantEquip()
spawn(function()
while getgenv().CanSwitch == true do
wait()
local char = game.Players.LocalPlayer.Character
local tool = char:FindFirstChildWhichIsA("Tool")
tool.Client.Disabled = true
tool.PassClient.Disabled = true
require(char:FindFirstChildWhichIsA("Tool").Config).FireModeSettings.CanSwitch = true
tool.Client.Disabled = false
tool.PassClient.Disabled = false
end
end)
end

--_G Instant Equip
function InstantEquip()
spawn(function()
while getgenv().InstantEquip == true do
wait()
local char = game.Players.LocalPlayer.Character
local tool = char:FindFirstChildWhichIsA("Tool")
tool.Client.Disabled = true
tool.PassClient.Disabled = true
require(char:FindFirstChildWhichIsA("Tool").Config).EquipTime = 0.1
require(char:FindFirstChildWhichIsA("Tool").Config).EquipAnimSpeed = 0.1
tool.Client.Disabled = false
tool.PassClient.Disabled = false
end
end)
end

--_G Instant Reload
function InstantReload()
spawn(function()
while getgenv().AutoReload == true do
wait()
local char = game.Players.LocalPlayer.Character
local tool = char:FindFirstChildWhichIsA("Tool")
if tool then
local args = {[1] = math.huge, [2] = "KLWE89U0", [3] = game:GetService("Players").LocalPlayer.Character:FindFirstChildWhichIsA("Tool"), [4] = false}
game:GetService("ReplicatedStorage").Events.GZ_R:FireServer(unpack(args))
end
end)
end
