--//CONFIG
getgenv().CD = 0.1

--//VAR
local VIM = game:GetService("VirtualInputManager")
local UIS = game:GetService("UserInputService")
local CoreGui = game:GetService("StarterGui")
local Mouse = game.Players.LocalPlayer:GetMouse()
local On = false
getgenv().Active = false

--//NOTIFICATION --//if you use this in a hub or something you can remove this I dont care
game:GetService'StarterGui':SetCore('SendNotification', {Title = 'Universal AutoClicker', Text = 'Made by a raccoon press L to start and stop', Duration = 5})

--//FUNCTION
local function AutoClick()
    VIM:SendMouseButtonEvent(500, 500, 0, true, game, 1)
    VIM:SendMouseButtonEvent(500, 500, 0, false, game, 1)
end

--//UIS
UIS.InputBegan:Connect(function(Inp, Typ)
    if Typ then return end
    if Inp.KeyCode == Enum.KeyCode.L then
        if On == false then
            On = true
            Active = true
            print(Active..math.random(5454565, 6541553435534534))
        elseif On == true then
            On = false
            Active = false
            print(Active..math.random(54565, 6541553435534534))
        end
    end
end)

--//LOOP
while task.wait(0.05) do
    if Active == true then
        task.wait(CD)
        AutoClick()
    end
end
